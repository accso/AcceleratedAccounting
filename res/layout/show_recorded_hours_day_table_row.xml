<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:clickable="true"
    android:onClick="doAccount"
    android:background="@drawable/table_row_selector" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/recorded_hours_indicator"
            android:layout_width="wrap_content"
        	android:layout_height="match_parent"
            android:background="@drawable/recorded_hours_indicator_none"
            android:gravity="left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/recorded_hours_location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="List item"
                android:textSize="18sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/recorded_hours_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="1dp"
                android:text="Subline"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</TableRow>